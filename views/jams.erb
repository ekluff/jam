<h1>Details for this Jam:</h1>
<h3>
Host:<%=User.find(@session.host_id.to_i()).username() %>
<br>
Date:<%=@session.date%>
<br>
Time:<%=@session.time%>
<br>
Location:<%=@session.address%>, <%=@session.city%>, <%=@session.state%> <%=@session.zip%>
<br>
Instruments Needed:
<br>
<ul>
  <%@session.instruments.each() do |instrument|%>
  <li><%=instrument.name%></li>
  <%end%>
</ul>
<br>
Musicians:
<br>
<ul>
  <%@session.users.each() do |user|%>
  <li><%=user.username%></li>
  <%end%>
</ul>
<br>
</h3>
<% if session[:user] %>
<form id="add_user" name="add_user" action="/jams/<%= @session.id %>/user/<%= session[:user].id %>" method="post">
  <select type="text" name="instrument_id" id="instrument_id">
    <% @instruments.each() do |instrument| %>
      <option value="<%= instrument.id %>"> <%= instrument.name %> </option>
    <% end %>
  </select>
    <button type="submit">Join this Jam</button>
</form>
<% end %>
