<div id="fullpage">

<div class="container">

  <div class="row margin-top-placeholder">
  </div>

  <div id="profile" class="section">
    <div class="row">
      <h2 class="col s12 deep-orange-text text-darken-4 center-align">
        Welcome <%= @user.first_name %>
      </h2>
    </div>

    <div class="row">
      <div class="col s12">
        <div class="card white-transparent hoverable">
          <div class="card-content grey-text text-darken-3">
            <div class="padded-row row">
              <div class="col s12 m3">
                <i class="material-icons left">person</i>
                <%= @user.first_name %> <%= @user.last_name %>
              </div>
            </div>
            <div class="padded-row row">
              <div class="col s12 m3">
                <i class="material-icons left">vpn_key</i>
                <%= @user.username %>
              </div>
            </div>
            <div class="padded-row row">
              <div class="col s12 m3">
                <i class="material-icons left">email</i>
                <%= @user.email %>
              </div>
            </div>
            <div class="padded-row row">
              <div class="col s12 m3">
                <i class="material-icons left">phone</i>
                <%= @user.phone %>
              </div>
            </div>
            <div class="padded-row row">
              <div class="col s12 m8">
                <i class="material-icons left">place</i>
                <%= @user.address %>, <%= @user.city %>, <%= @user.state %> <%= @user.zip %>
              </div>
            </div>
            <div class="row">
              <div class="col s12">
                <a href="#edit_profile" class="waves-effect waves-light btn deep-orange darken-3 right">edit</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="edit_profile" class="section">
    <div class="row">
      <h3 class="col s12 deep-orange-text text-darken-4 center-align">Edit Profile</h3>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="card white-transparent hoverable">
          <div class="card-content grey-text text-darken-3">
            <form class="col s12" action="/signup" method="post">
              <div class="row">
                <div class="input-field col s12 m6">
                  <i class="material-icons prefix">person</i>
                  <input id="icon-prefix" name="first_name" type="text" placeholder="">
                  <label for="icon-prefix">First Name</label>
                </div>
                <div class="input-field col s12 m6">
                  <i class="material-icons prefix">person_outline</i>
                  <input id="icon-prefix" name="last_name" type="text" placeholder="">
                  <label for="icon-prefix">Last Name</label>
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12 m6">
                  <i class="material-icons prefix">email</i>
                  <input id="icon-prefix" name="email" type="email" placeholder="">
                  <label for="email">Email</label>
                </div>
                <div class="input-field col s12 m6">
                  <i class="material-icons prefix">phone</i>
                  <input id="icon-prefix" name="phone" type="tel" placeholder="">
                  <label for="phone">Phone (xxx-xxx-xxxx)</label>
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12 m4">
                  <i class="material-icons prefix">vpn_key</i>
                  <input id="icon-prefix" name="username" type="text" placeholder="">
                  <label for="icon-prefix">Username (at least 6 characters)</label>
                </div>
                <div class="input-field col s12 m4">
                  <input id="icon-prefix" name="password" type="password" placeholder="">
                  <label for="icon-prefix">Password (8+ characters and a number)</label>
                </div>
                <div class="input-field col s12 m4">
                  <input id="icon-prefix" name="password_confirmation" type="password" placeholder="">
                  <label for="icon-prefix">Password Confirmation</label>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <div class="card white-transparent hoverable">
          <div class="card-content grey-text text-darken-3">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">my_location</i>
                  <input id="icon-prefix" name="address" type="text" placeholder="">
                  <label for="icon-prefix">Street</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12 m4">
                  <i class="material-icons prefix">place</i>
                  <input id="icon-prefix" name="city" type="text" placeholder="">
                  <label for="icon-prefix">City</label>
                </div>
                <div id="dropdown" class="input-field col s12 m4">
                  <input id="icon-prefix" name="state" type="text" placeholder="">
                  <label for="icon-prefix">State (abbrev.)</label>
                </div>
                <div class="input-field col s12 m4">
                  <input id="icon-prefix" name="zip" type="text" placeholder="">
                  <label for="icon-prefix">Zip</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <button type="submit" class="waves-effect waves-light btn deep-orange darken-3 right">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

